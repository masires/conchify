<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_view_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="25dp"
        android:paddingBottom="10dp"
        android:textColor="@android:color/darker_gray"
        android:text="Conchify Feedback"

        android:textAlignment="center"
        android:textSize="35sp" />


    <EditText
        android:id="@+id/etCorreo_Electronico_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:ems="10"
        android:paddingTop="15dp"
        android:padding="20dp"
        android:hint="Correo Electronico"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/etNumero_placa_id"
        android:layout_width="match_parent"
        android:background="@android:color/transparent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:padding="20dp"
        android:hint="Numero de Placa"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etNumero_carnet_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@android:color/transparent"
        android:padding="20dp"
        android:hint="Numero de Carnet"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etNumero_franja_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:ems="10"
        android:padding="20dp"
        android:hint="Numero de Franja"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etTipo_Queja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:ems="10"
        android:padding="20dp"
        android:hint="Tipo de Queja"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/tvDate"
        style="@android:style/Widget.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="@string/feche_selector"
        android:padding="20dp" />

    <EditText
        android:id="@+id/etComentario"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="150dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="Comentarios" />

    <Button
        android:id="@+id/btnSendFormInfo"
        android:padding="20dp"
        android:layout_width="300dp"
        android:background="@android:color/holo_blue_light"
        android:textColor="@android:color/white"
        android:layout_gravity="center_horizontal"

        android:layout_height="wrap_content"
        android:onClick="OnFormInfo"
        android:text="Enviar" />


    <!--<WebView-->
        <!--android:id="@+id/webView"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_alignParentTop="true"/>-->
</LinearLayout>